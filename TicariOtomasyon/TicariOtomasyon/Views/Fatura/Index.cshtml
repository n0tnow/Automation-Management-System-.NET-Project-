@using TicariOtomasyon.Models.Siniflar
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Tedarikçi</th>
        <th>Teslim Alan Personel</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td> @k.FaturaID</td>
    <td> @k.SeriNo</td>
    <td> @k.SiraNo</td>
    <td> @k.VergiDairesi</td>
    <td> @k.Tarih</td>
    <td> @k.Saat</td>
    <td> @k.Toplam </td>
    <td> @k.TedarikciTeslim</td>
    <td> @k.PersonelTeslimAlan</td>
    <td><a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-success" style="background-color:darkblue">Detaylar</a></td>
    <td><a href="/Fatura/FaturaSil/@k.FaturaID" class="btn btn-danger">Sil</a></td>
</tr>
        
    }


</table>
<a href="/Fatura/FaturaEkle" class="btn btn-primary">Yeni Fatura</a>


