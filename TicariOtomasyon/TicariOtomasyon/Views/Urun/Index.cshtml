@using TicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl2" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>STOK</th>
            <th>FİYAT</th>
            <th>KATEGORİ</th>
            <th>GÖRSEL</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UrunID</td>
            <td>@u.UrunAd</td>
            <td>@u.Stok</td>
            <td>@u.SatisFiyat</td>
            <td>@u.Kategori.KategoriAd</td>
            <td>@u.UrunGorsel</td>
            <td><a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<br />
<a href="/Urun/YeniUrun" class="btn btn-primary" style="margin-left:20px;">Yeni Ürün</a>
<a href="/Urun/UrunListesi" class="btn btn-primary" style="margin-left:20px">PDF~Excel</a>






